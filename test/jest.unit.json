{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "moduleNameMapper": {
    "test/(.*)$": "<rootDir>/../test/$1",
    "src/(.*)$": "<rootDir>/$1",
    "^@app/(.*)$": "<rootDir>/app/$1",
    "^@infrastructure/(.*)$": "<rootDir>/infrastructure/$1",
    "^@domain(.*)$/": "<rootDir>/domain/$1"
  },
  "setupFiles": ["<rootDir>/../test/test-env.ts"]
}
